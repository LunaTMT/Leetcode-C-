
//Queue implementation 
// Most obvious and least challenging implementation, however, least efficient.

#include <iostream>
#include <vector>
using namespace std;

class DataStream {
private:
    int value;
    int k;
    deque<int> dq;
    unordered_map<int, int>cnt;

public:
    DataStream(int value, int k) {
        this->value = value;
        this->k = k;
    }

    bool consec(int num) {
        cnt[num]++;
        dq.push_back(num);
        bool ans = (cnt.size() == 1 && dq.size() == k && num == value);

        if (dq.size() == k){
            int front = dq.front();
            dq.pop_front();
            cnt[front]--;
            if (cnt[front] == 0){
                cnt.erase(front);
            }
        }
        return ans;
    }
};
